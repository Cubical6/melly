{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Melly C3 Components Schema",
  "description": "Validates C3 Component level definitions. Identifies logical components and their structure within containers. Generated by c3-abstractor agent.",
  "type": "object",
  "required": ["metadata", "components"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata about the C3 component analysis",
      "required": ["schema_version", "timestamp", "parent"],
      "properties": {
        "schema_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Schema version in semver format"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of C3 generation"
        },
        "parent": {
          "type": "object",
          "description": "Reference to the parent c2-containers.json file",
          "required": ["file", "timestamp"],
          "properties": {
            "file": {
              "type": "string",
              "enum": ["c2-containers.json"],
              "description": "Parent file name"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of parent file"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "components": {
      "type": "array",
      "description": "List of identified C3 components",
      "items": {
        "type": "object",
        "required": ["id", "name", "container_id"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Component identifier (lowercase alphanumeric with hyphens)"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Component name"
          },
          "description": {
            "type": "string",
            "description": "Component description and responsibilities"
          },
          "container_id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Parent container ID (from C2)"
          },
          "type": {
            "type": "string",
            "enum": ["controller", "service", "repository", "model", "utility", "middleware", "plugin", "adapter", "factory", "unknown"],
            "description": "Component type or pattern"
          },
          "pattern": {
            "type": "string",
            "enum": ["mvc", "microservices", "layered", "modular", "plugin-based", "event-driven", "unknown"],
            "description": "Architectural pattern used"
          },
          "responsibility": {
            "type": "array",
            "description": "Primary responsibilities of this component",
            "items": {
              "type": "string"
            }
          },
          "location": {
            "type": "object",
            "description": "Code location information",
            "properties": {
              "path": {
                "type": "string",
                "description": "File path or directory path in repository"
              },
              "type": {
                "type": "string",
                "enum": ["directory", "file", "module", "package"],
                "description": "Type of location"
              }
            },
            "additionalProperties": false
          },
          "exports": {
            "type": "array",
            "description": "Public API and exported interfaces",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Export name (class, function, interface, etc.)"
                },
                "type": {
                  "type": "string",
                  "enum": ["class", "function", "interface", "module", "constant", "type", "unknown"],
                  "description": "Type of export"
                },
                "description": {
                  "type": "string",
                  "description": "What this export provides"
                }
              },
              "additionalProperties": false
            }
          },
          "dependencies": {
            "type": "array",
            "description": "Components this component depends on",
            "items": {
              "type": "object",
              "properties": {
                "component_id": {
                  "type": "string",
                  "description": "Dependent component ID"
                },
                "type": {
                  "type": "string",
                  "enum": ["internal", "external", "third-party"],
                  "description": "Dependency type"
                },
                "reason": {
                  "type": "string",
                  "description": "Why this dependency exists"
                }
              },
              "additionalProperties": false
            }
          },
          "domain_models": {
            "type": "array",
            "description": "Domain models and entities handled by this component",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Model or entity name"
                },
                "type": {
                  "type": "string",
                  "enum": ["entity", "value-object", "aggregate", "event", "dto", "unknown"],
                  "description": "Type of domain model"
                },
                "description": {
                  "type": "string",
                  "description": "What this model represents"
                }
              },
              "additionalProperties": false
            }
          },
          "key_patterns": {
            "type": "array",
            "description": "Design patterns used in this component",
            "items": {
              "type": "string",
              "enum": ["singleton", "factory", "strategy", "observer", "decorator", "adapter", "facade", "dependency-injection", "service-locator", "unknown"]
            }
          },
          "observations": {
            "type": "array",
            "description": "Key observations and findings about the component",
            "items": {
              "type": "string"
            }
          },
          "relations": {
            "type": "array",
            "description": "Relationships with other components",
            "items": {
              "type": "object",
              "properties": {
                "target": {
                  "type": "string",
                  "description": "Target component ID"
                },
                "type": {
                  "type": "string",
                  "enum": ["depends-on", "used-by", "creates", "manages", "communicates-with", "unknown"],
                  "description": "Type of relationship"
                },
                "strength": {
                  "type": "string",
                  "enum": ["strong", "moderate", "weak"],
                  "description": "Strength of coupling"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the relationship"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
