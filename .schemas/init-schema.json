{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Melly Init Schema",
  "description": "Validates the initial Melly configuration with repository metadata. Generated by c4model-explorer agent.",
  "type": "object",
  "required": ["metadata", "repositories"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata about the initialization process",
      "required": ["schema_version", "generator", "generated_by", "timestamp", "melly_version"],
      "properties": {
        "schema_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Schema version in semver format (e.g., 1.0.0)"
        },
        "generator": {
          "type": "string",
          "enum": ["melly-workflow"],
          "description": "The workflow system that generated this file"
        },
        "generated_by": {
          "type": "string",
          "enum": ["c4model-explorer"],
          "description": "The specific agent/component that generated this file"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "melly_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Version of Melly used to generate this file"
        }
      },
      "additionalProperties": false
    },
    "repositories": {
      "type": "array",
      "description": "List of repositories analyzed",
      "items": {
        "type": "object",
        "required": ["id", "path", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique repository identifier (lowercase alphanumeric with hyphens)"
          },
          "path": {
            "type": "string",
            "description": "Absolute or relative path to the repository"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Human-readable repository name"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the repository"
          },
          "languages": {
            "type": "array",
            "description": "Programming languages detected in the repository",
            "items": {
              "type": "string",
              "enum": ["javascript", "typescript", "python", "java", "go", "rust", "php", "ruby", "csharp", "cpp", "c", "swift", "kotlin", "scala", "clojure", "elixir", "erlang", "haskell", "other"]
            }
          },
          "package_managers": {
            "type": "array",
            "description": "Package managers detected",
            "items": {
              "type": "string",
              "enum": ["npm", "yarn", "pnpm", "pip", "conda", "maven", "gradle", "cargo", "composer", "gem", "nuget", "cocoapods", "other"]
            }
          },
          "manifests": {
            "type": "array",
            "description": "Package manifest files detected",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string",
            "enum": ["monorepo", "multi-service", "single-service", "library", "unknown"],
            "description": "Type of repository structure"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
